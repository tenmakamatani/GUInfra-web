        "ts-node-dev": "^1.0.0-pre.43",
        "typescript": "^3.6.3",
        "webpack": "^4.39.3",
        "webpack-cli": "^3.3.8",
        "webpack-dev-server": "^3.8.0",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "connected-react-router": "^6.5.2",
        "express": "^4.17.1",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-redux": "^7.1.1",
        "react-router-dom": "^5.1.2",
        "redux": "^4.0.4",
        "redux-saga": "^1.1.3"
