{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@libs/*": ["src/libs/*"],
      "@modules/*": ["src/modules/*"],
      "@views/*": ["src/views/*"]
    },
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "ES2015",
    "target": "es5",
    "jsx": "preserve"
  }
}